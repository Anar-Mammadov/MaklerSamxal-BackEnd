

@model Product

@{ ViewData["Title"] = "Details"; }
<h1 style="text-align:center">Blog Details</h1>


<div class="white_card_body">
    <div class="card-body">
        <div class="form-row">
            <div class="col-4">
                <div class="input-group mb-3">

                    <img width="200" height="200" class="img-fluid" src="~/assets/images/@Model.ImagePath" />


                </div>
            </div>


            <div class="col-8">

                <div class="form-group col-12">
                    <label asp-for="Title" class="control-label"></label>
                    <p class="form-control">@Model.Title</p>
                </div>

                <div class="form-group col-12">
                    <label asp-for="Location" class="control-label"></label>
                    <p class="form-control  ">@Model.Location</p>
                </div>

                <div class="form-group col-12">
                    <label asp-for="Price" class="control-label"></label>
                    <p class="form-control  ">@Model.Price</p>
                </div>

                <div class="form-group col-12">
                    <label asp-for="Bed" class="control-label"></label>
                    <p class="form-control ">@Model.Bed</p>
                </div>
                <div class="form-group col-12">
                    <label asp-for="Bed" class="control-label"></label>
                    <p class="form-control ">@Model.Bed</p>
                </div>
                <div class="form-group col-12">
                    <label asp-for="Baths" class="control-label"></label>
                    <p class="form-control ">@Model.Baths</p>
                </div>
                <div class="form-group col-12">
                    <label asp-for="Sqft" class="control-label"></label>
                    <p class="form-control ">@Model.Sqft</p>
                </div>
                <div class="form-group col-12">
                    <label asp-for="Description" class="control-label"></label>
                    <p class="form-control textarea">@Model.Description</p>
                </div>

                <div class="form-group col-12">
                    <label asp-for="ShopDescription" class="control-label"></label>
                    <p class="form-control textarea">@Model.ShopDescription</p>
                </div>



            </div>
        </div>
    </div>

</div>



<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
<a class="btn btn-outline-dark" asp-action="Index">Back to List</a>


@section addcss{
    <style>
        p.textarea {
            height: unset;
        }
    </style>
}